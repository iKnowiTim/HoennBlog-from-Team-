    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Command="{Binding GoToAddBlogPageCommand}" CommandParameter="{Binding .}"/>
    </ContentPage.ToolbarItems>

    

